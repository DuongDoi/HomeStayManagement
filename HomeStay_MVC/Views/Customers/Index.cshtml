@model IEnumerable<HomeStay_MVC.Models.Customers>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý khách hàng";
}

<h2 class="text-center mt-4">Quản lý khách hàng</h2>

<p style="text-align:right; margin-right:20px;">
    <a class="btn btn-success" asp-action="AddOrEdit">Thêm khách hàng mới</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>Họ tên</th>
                <th>CCCD</th>
                <th>Điện thoại</th>
                <th>Địa chỉ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => customer.CUSTOMERS_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => customer.CUSTOMERS_CARD_NUMBER)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => customer.CUSTOMERS_PHONE)
                    </td>
                    <td class="truncate-cell">
                        @Html.DisplayFor(modelItem => customer.CUSTOMERS_ADDRESS)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@customer.ID">Chi tiết</a>
                        <a asp-action="AddOrEdit" class="btn btn-sm btn-primary" asp-route-id="@customer.ID">Sửa</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@customer.ID"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                            Swal.fire('Thành công', '@TempData["Success"]', 'success');
            </text>
        }
    </script>
}
