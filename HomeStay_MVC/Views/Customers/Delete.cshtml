@model HomeStay_MVC.Models.Customers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Xóa khách hàng";
}
<h2 class="text-center mt-4">Xóa khách hàng</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("Delete", "Customers", new { id = Model.ID }, FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="Save_Code">Mã Pin</label>
                    @Html.PasswordFor(m => m.Save_Code, new { @class = "form-control", @id = "Save_Code", @required = "required" })
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }

                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?')">Xác nhận</button>
                    <a href="@Url.Action("Index", "Customers")" class="btn btn-success">Quay lại</a>
                </p>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                        Swal.fire('Thành công', '@TempData["Success"]', 'success');
            </text>
        }
    </script>
}
