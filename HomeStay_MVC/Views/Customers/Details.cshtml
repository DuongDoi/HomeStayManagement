@model HomeStay_MVC.Models.Customers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Thông tin khách hàng";
}
<h2 class="text-center mt-4">Thông tin người dùng</h2>
<div style="margin-left:50px; margin-top: 50px;">
    <div style="display: flex; flex-direction:row;">
        <div style="flex:1;margin-left: 30px;margin-right: 30px;">
            <div class="form-group">
                <label for="Name">Tên khách hàng</label>
                <input id="Name" type="text" class="form-control" value="@Model.CUSTOMERS_NAME" readonly />
            </div>
            <div class="form-group">
                <label for="CUSTOMERS_PHONE">Điện thoại liên hệ</label>
                <input id="CUSTOMERS_PHONE" class="form-control" value="@Model.CUSTOMERS_PHONE" readonly />
            </div>
            <div class="form-group">
                <label for="CUSTOMERS_ADDRESS">Địa chỉ</label>
                <input id="CUSTOMERS_ADDRESS" type="text" class="form-control" value="@Model.CUSTOMERS_ADDRESS" readonly />
            </div>
            <div class="form-group">
                <label for="CUSTOMERS_CARD_NUMBER">CCCD</label>
                <input id="CUSTOMERS_CARD_NUMBER" type="text" class="form-control" value="@Model.CUSTOMERS_CARD_NUMBER" readonly />
            </div>
        </div>
        <div style="flex:1; margin-left: 30px;margin-right: 30px;">

            <div class="form-group">
                <label for="CREATE_BY">Người tạo</label>
                <input id="CREATE_BY" type="text" class="form-control" value="@Model.CREATE_BY" readonly />
            </div>
            <div class="form-group">
                <label for="USERS_NAME">Quản lý bởi</label>
                <input id="USERS_NAME" type="text" class="form-control" value="@Model.USERS_NAME" readonly />
            </div>
            <div class="form-group">
                <label for="CREATE_AT">Ngày tạo</label>
                <input id="CREATE_AT" type="text" class="form-control" value="@Model.CREATE_AT" readonly />
            </div>
            <div class="form-group">
                <label for="UPDATE_AT">Ngày sửa đổi</label>
                <input id="UPDATE_AT" type="text" class="form-control" value="@Model.UPDATE_AT" readonly />
            </div>
            <p style="text-align:right; margin-right:40px; margin-top: 50px">
                <a href="@Url.Action("Index", "Customers")" class="btn btn-danger">Quay lại</a>
            </p>
        </div>
   </div>
</div>

