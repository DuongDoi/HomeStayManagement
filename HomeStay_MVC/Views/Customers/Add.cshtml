@model HomeStay_MVC.Models.Customers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thêm mới khách hàng";
}

<h2 class="text-center mt-4">Thêm mới khách hàng</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("Add", "Customers", FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="Users">Tên khách hàng</label>
                    @Html.TextBoxFor(m => m.CUSTOMERS_NAME, new { @class = "form-control", @id = "Users", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Pass1">Điện thoại liên hệ</label>
                    @Html.TextBoxFor(m => m.CUSTOMERS_PHONE, new { @class = "form-control", @id = "Pass1", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Pass2">Mã định danh (CCCD)</label>
                    @Html.TextBoxFor(m => m.CUSTOMERS_CARD_NUMBER, new { @class = "form-control", @id = "Pass2", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Email">Địa chỉ khách hàng</label>
                    @Html.TextBoxFor(m => m.CUSTOMERS_ADDRESS, new { @class = "form-control", @id = "Email", @required = "required" })
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Thêm</button>
                    <a href="@Url.Action("Index", "Customers")" class="btn btn-danger">Hủy</a>
                </p>
            </div>
        </div>
    }
</div>
