@model HomeStay_MVC.Models.Rooms

@{
    Layout = "_Layout";
    ViewData["Title"] = "Thông tin phòng";
}
<h2 class="text-center mt-4">Thông tin phòng</h2>
<div style="margin-left:50px; margin-top: 50px;">
    <div style="display: flex; flex-direction:row;">
        <div style="flex:1;margin-left: 30px;margin-right: 30px;">
            <div class="form-group">
                <label for="id">Mã số</label>
                <input id="id" type="text" class="form-control" value="@Model.ID" readonly />
            </div>
            <div class="form-group">
                <label for="ROOMS_NAME">Tên phòng</label>
                <input id="ROOMS_NAME " type="email" class="form-control" value="@Model.ROOMS_NAME" readonly />
            </div>
            <div class="form-group">
                <label for="ROOMS_PRICE">Giá phòng( VND/ngày-đêm)</label>
                <input id="ROOMS_PRICE" type="text" class="form-control" value="@Model.ROOMS_PRICE" readonly />
            </div>
            <div class="form-group">
                <label for="ROOMS_STATUS">Tình trạng</label>
                <input id="ROOMS_STATUS" type="text" class="form-control" value="@Model.ROOMS_STATUS" readonly />
            </div>
        </div>
        <div style="flex:1; margin-left: 30px;margin-right: 30px;">
            <div class="form-group">
                <label for="CREATE_AT">Ngày tạo</label>
                <input id="CREATE_AT" type="text" class="form-control" value="@Model.CREATE_AT" readonly />
            </div>
            <div class="form-group">
                <label for="UPDATE_AT">Ngày sửa đổi</label>
                <input id="UPDATE_AT" type="text" class="form-control" value="@Model.UPDATE_AT" readonly />
            </div>
            <div class="form-group">
                <label for="HOMESTAYS_NAME">Tên cơ sở</label>
                <input id="HOMESTAYS_NAME" type="text" class="form-control" value="@Model.HOMESTAYS_NAME" readonly />
            </div>
            <p style="text-align:right; margin-right:40px; margin-top: 50px">
                <a href="@Url.Action("Index", "Rooms")" class="btn btn-danger">Quay lại</a>
            </p>
        </div>
   </div>
</div>

