@model HomeStay_MVC.Models.HomestaysObj

@{
    Layout = "_Layout";
    ViewData["Title"] = "Cập nhật thông tin";
}
<h2 class="text-center mt-4">Cập nhật thông tin</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("Edit", "HomeStay", new { id = Model.id}, FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="HOMESTAYS_NAME">Tên cơ sở</label>
                    @Html.TextBoxFor(m => m.HOMESTAYS_NAME, new { @class = "form-control", @id = "HOMESTAYS_NAME", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="HOMESTAYS_ADDRESS">Địa chỉ cơ sở</label>
                    @Html.TextBoxFor(m => m.HOMESTAYS_ADDRESS, new { @class = "form-control", @type = "HOMESTAYS_ADDRESS", @id = "Email", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="HOMESTAY_DESCRIPTION">Mô tả</label>
                    @Html.TextAreaFor(m => m.HOMESTAY_DESCRIPTION, new { @class = "form-control", @id = "HOMESTAY_DESCRIPTION", @required = "required" })
                </div>
            </div>
            <div style="flex:1; margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="MANAGER_NAME">Tên quản lý</label>
                    @Html.TextBoxFor(m => m.MANAGER_NAME, new { @class = "form-control", @id = "MANAGER_NAME", @required = "required" })
                </div>

                <div class="form-group">
                    <label for="MANAGER_PHONE">Điện thoại liên hệ</label>
                    @Html.TextBoxFor(m => m.MANAGER_PHONE, new { @class = "form-control", @id = "MANAGER_PHONE", @required = "required" })
                </div>

                <div class="form-group">
                    <label for="MANAGER_CARD_NUMBER">Số định danh quản lý</label>
                    @Html.TextBoxFor(m => m.MANAGER_CARD_NUMBER, new { @class = "form-control", @id = "MANAGER_CARD_NUMBER", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Save_code">Mã Pin</label>
                    @Html.PasswordFor(m => m.Save_code, new { @class = "form-control", @id = "Save_code", @required = "required" })
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }

                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <a href="@Url.Action("Index", "HomeStay")" class="btn btn-danger">Quay lại</a>
            </div>
        </div>
    }
</div>
