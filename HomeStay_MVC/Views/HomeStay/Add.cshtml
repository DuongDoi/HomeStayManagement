@model HomeStay_MVC.Models.RegisterModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thêm cơ sở mới";
}

<h2 class="text-center mt-4">Thêm cơ sở mới</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("Add", "Account", FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="Users">Tên đăng nhập</label>
                    @Html.TextBoxFor(m => m.Users, new { @class = "form-control", @id = "Users", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Pass1">Mật khẩu</label>
                    @Html.PasswordFor(m => m.Pass1, new { @class = "form-control", @id = "Pass1", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Pass2">Nhập lại mật khẩu</label>
                    @Html.PasswordFor(m => m.Pass2, new { @class = "form-control", @id = "Pass2", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    @Html.PasswordFor(m => m.Email, new { @class = "form-control", @id = "Email", @required = "required" })
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
            </div>
            <div style="flex:1; margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="Phone">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @id = "Phone", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Name">Họ tên</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name", @required = "required" })
                </div>
                <label for="role">Loại tài khoản</label>
                @Html.DropDownListFor(m => m.role, Model.RoleOptions, new { @class = "form-control", @id = "role", required = "required" })

                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Thêm</button>
                    <a href="@Url.Action("Index", "Account")" class="btn btn-danger">Hủy</a>
                </p>
            </div>
        </div>
    }
</div>
