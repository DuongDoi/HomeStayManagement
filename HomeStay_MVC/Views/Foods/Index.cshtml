@model IEnumerable<HomeStay_MVC.Models.FOODS>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý thực phẩm";
}

<h2 class="text-center mt-4">Quản lý thực phẩm</h2>

<p style="text-align:right; margin-right:20px;">
    <a class="btn btn-success" asp-action="Add">Tạo món mới</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên món</th>
                <th>Loại</th>
                <th>Giá món</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => food.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.FOODS_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.FOODS_TYPE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.FOODS_PRICE)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@food.ID">Chi tiết</a>
                        <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@food.ID">Sửa</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@food.ID">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                                Swal.fire('Thành công', '@TempData["Success"]', 'success');
            </text>
        }
    </script>
}
