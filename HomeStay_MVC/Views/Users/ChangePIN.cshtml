@model HomeStay_MVC.Models.ChangePIN
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đổi mã PIN";
}

<h2 class="text-center mt-4">Đổi mã PIN</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("ChangePIN", "Users", new { username = Model.UserName }, FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="OldPIN">Mã PIN cũ</label>
                    @Html.PasswordFor(m => m.OldPIN, new { @class = "form-control", @id = "OldPIN", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="NewPIN1">Mã PIN mới</label>
                    @Html.PasswordFor(m => m.NewPIN1, new { @class = "form-control", @id = "NewPIN1", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="NewPIN2">Nhập lại mã PIN mới</label>
                    @Html.PasswordFor(m => m.NewPIN2, new { @class = "form-control", @id = "NewPIN2", @required = "required" })
                </div>

                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <a href="@Url.Action("Index", "AdminHome")" class="btn btn-danger">Hủy</a>
                </p>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
            </div>
        </div>
    }
</div>
