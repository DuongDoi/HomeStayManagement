@model HomeStay_MVC.Models.ChangePass
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đổi mật khẩu";
}

<h2 class="text-center mt-4">Đổi mật khẩu</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("ChangePass", "Users", new { username = Model.UserName }, FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="OldPass">Mật khẩu cũ</label>
                    @Html.PasswordFor(m => m.OldPass, new { @class = "form-control", @id = "OldPass", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="NewPass1">Mật khẩu mới</label>
                    @Html.PasswordFor(m => m.NewPass1, new { @class = "form-control", @id = "NewPass1", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="NewPass2">Nhập lại mật khẩu mới</label>
                    @Html.PasswordFor(m => m.NewPass2, new { @class = "form-control", @id = "NewPass2", @required = "required" })
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }

                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <a href="@Url.Action("Index", "AdminHome")" class="btn btn-danger">Hủy</a>
                </p>
            </div>
        </div>
    }
</div>
