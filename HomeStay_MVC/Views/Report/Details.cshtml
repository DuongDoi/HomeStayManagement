@model HomeStay_MVC.Models.ReportModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Thông tin chi tiết";
}
<h2 class="text-center mt-4">Thông tin chi tiết</h2>

<div style="margin-left:50px; margin-top: 50px;">
    <div style="display: flex; flex-direction:row;">
        <div style="flex:1;margin-left: 30px;margin-right: 30px;">
            <div class="form-group">
                <label for="homestay_name">Cơ sở</label>
                <input id="homestay_name" type="text" class="form-control" value="@Model.HOMESTAYS_NAME" readonly />
            </div>
            <div class="form-group">
                <label for="category">Danh mục</label>
                <input id="category" type="text" class="form-control" value="@Model.CATEGORY" readonly />
            </div>
            <div class="form-group">
                <label for="DESCRIPT">Mô tả</label>
                <input id="DESCRIPT" type="text" class="form-control" value="@Model.DESCRIPT" readonly />
            </div>
            <div class="form-group">
                <label for="AMOUNT">Giá trị</label>
                <input id="AMOUNT" class="form-control" value="@Model.AMOUNT" readonly />
            </div>
            <div class="form-group">
                <label for="TYPE">Phân loại</label>
                <input id="TYPE" type="text" class="form-control" value="@Model.TYPE" readonly />
            </div>
        </div>
        <div style="flex:1;margin-left: 30px;margin-right: 30px;">
            <div class="form-group">
                <label for="CREATE_BY_USERS_NAME">Người tạo</label>
                <input id="CREATE_BY_USERS_NAME" type="text" class="form-control" value="@Model.CREATE_BY_USERS_NAME" readonly />
            </div>
            <div class="form-group">
                <label for="UPDATE_BY_USERS_NAME">Người chỉnh sửa</label>
                <input id="UPDATE_BY_USERS_NAME" type="text" class="form-control" value="@Model.UPDATE_BY_USERS_NAME" readonly />
            </div>
            <div class="form-group">
                <label for="CREATE_AT">Ngày tạo</label>
                <input id="CREATE_AT" type="text" class="form-control" value="@Model.CREATE_AT" readonly />
            </div>
            <div class="form-group">
                <label for="UPDATE_AT">Ngày sửa đổi</label>
                <input id="UPDATE_AT" type="text" class="form-control" value="@Model.UPDATE_AT" readonly />
            </div>
            <p style="text-align:right; margin-right:40px; margin-top: 50px">
                <a href="@Url.Action("Index", "Report")" class="btn btn-danger">Quay lại</a>
            </p>
        </div>
   </div>
</div>

