@model HomeStay_MVC.Models.Services
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thêm dịch vụ mới";
}

<h2 class="text-center mt-4">Thêm dịch vụ mới</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("Add", "Services", FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="SERVICES_NAME">Tên dịch vụ</label>
                    @Html.TextBoxFor(m => m.SERVICES_NAME, new { @class = "form-control", @id = "SERVICES_NAME", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="SERVICES_PRICE">Giá dịch vụ</label>
                    @Html.TextBoxFor(m => m.SERVICES_PRICE, new { type="number",@class = "form-control", @id = "SERVICES_PRICE", @required = "required" })
                </div>
                
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Thêm</button>
                    <a href="@Url.Action("Index", "Services")" class="btn btn-danger">Hủy</a>
                </p>
            </div>
        </div>
    }
</div>
