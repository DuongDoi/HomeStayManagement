@model IEnumerable<HomeStay_MVC.Models.Services>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý dịch vụ";
}

<h2 class="text-center mt-4">Quản lý thực phẩm</h2>

<p style="text-align:right; margin-right:20px;">
    <a class="btn btn-success" asp-action="AddOrEdit">Tạo dịch vụ mới</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên dịch vụ</th>
                <th>Giá dịch vụ</th>
                <th>Chủ cơ sở</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => service.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => service.SERVICES_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => service.SERVICES_PRICE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => service.USERS)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@service.ID">Chi tiết</a>
                        <a asp-action="AddOrEdit" class="btn btn-sm btn-primary" asp-route-id="@service.ID">Sửa</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@service.ID"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa dịch vụ này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                                    Swal.fire('Thành công', '@TempData["Success"]', 'success');
            </text>
        }
    </script>
}
