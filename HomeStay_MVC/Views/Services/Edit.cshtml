@model HomeStay_MVC.Models.AccountInfor

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chỉnh sửa thông tin";
}
<h2 class="text-center mt-4">Chỉnh sửa thông tin tài khoản</h2>
<div style="margin-left:50px; margin-top: 50px;">
    @using (Html.BeginForm("Edit", "Account", new { username = Model.Users }, FormMethod.Post))
    {
        <div style="display: flex; flex-direction:row;">
            <div style="flex:1;margin-left: 30px;margin-right: 30px;">
                <div class="form-group">
                    <label for="Name">Họ và tên</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @id = "Email", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Phone">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @id = "Phone", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Card_Number">CCCD</label>
                    @Html.TextBoxFor(m => m.Card_Number, new { @class = "form-control", @id = "Card_Number" , @required = "required"})
                </div>
                <div class="form-group">
                    <label for="Save_Code">Mã Pin</label>
                    @Html.PasswordFor(m => m.Save_Code, new { @class = "form-control", @id = "Save_Code", @required = "required" })
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }

                <p style="text-align:right; margin-right:40px; margin-top: 50px">
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <a href="@Url.Action("Index", "Account")" class="btn btn-danger">Quay lại</a>
                </p>
            </div>
        </div>
    }
</div>
